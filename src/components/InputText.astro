---
interface Props {
  type: 'text' | 'email' | 'password';
  id: string;
  name: string;
  label: string;
  required?: boolean;
}

const { type, name, id, label, required } = Astro.props;
---

<label for={id} class="block text-sm font-medium leading-6">{label}</label>
<div class="mt-2">
  <input
    type={type}
    name={name}
    id={id}
    autocomplete={name}
    class="block w-full rounded-md border-0 px-2.5 py-1.5 bg-neutral-800 text-white-900 outline-none outline-offset-0 placeholder:text-gray-400 focus:outline-green-500 sm:text-sm sm:leading-6"
    required={required || false}
  />
</div>
